{
    "compilerOptions": {
        "module":                 "commonjs",
        "target":                 "esnext",
        "sourceMap":              true,
        "experimentalDecorators": true,
        "esModuleInterop":        true,
        "emitDecoratorMetadata":  true,
        "noImplicitAny":          false,
        "declaration":            true,
        "lib":                    [
            "es2017.object",
            "es2015",
            "es2017",
            "esnext",
            "dom"
        ],
        "types":                  [
            "node",
            "reflect-metadata"
        ],
        "pretty":                 true,
        "skipLibCheck":           true
    },
    "include":         [
        "**/*.ts"
    ],
    "exclude":         [
        "node_modules"
    ]
}
